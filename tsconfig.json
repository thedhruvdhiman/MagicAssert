{
    "exclude": [
        "node_modules",
        "dist",
    ],
    "compilerOptions": {
        "lib": ["ESNext"],
        "moduleDetection": "force",
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
    },
    "include": ["src/**/*"],
}